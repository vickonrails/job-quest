{
  "name": "ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/out/index.js",
  "types": "./dist/out/index.d.ts",
  "scripts": {
    "dev": "concurrently \"npm run build:ui --watch\" \"npm run build:tailwind --watch\"",
    "test": "echo \"no test specified\" && exit 0",
    "build": "concurrently \"npm run build:ui\" \"npm run build:tailwind\"",
    
    "build:ui": "tsc && vite build",
    "build:tailwind": "tailwindcss -o ./dist/styles.css",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.26",
    "@storybook/addon-interactions": "^7.0.26",
    "@storybook/addon-links": "^7.0.26",
    "@storybook/blocks": "^7.0.26",
    "@storybook/react": "^7.0.26",
    "@storybook/react-vite": "^7.0.26",
    "@storybook/testing-library": "^0.0.14-next.2",
    "eslint-plugin-storybook": "^0.6.12",
    "storybook": "^7.0.26",
    "vite-plugin-dts": "^3.0.3"
  }
}
